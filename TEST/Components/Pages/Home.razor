@page "/"
@attribute [StreamRendering(true)]
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager

<style>
    /* Estilo general */
    body {
        font-family: 'Bodoni Moda', serif;
        margin: 0; /* Elimina los márgenes por defecto */
        padding: 0; /* Elimina el padding por defecto */
        overflow-x: hidden; /* Evita el desbordamiento horizontal */
    }

    /* Hero Section */
    .hero-section {
        height: 70vh;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/hotel.jpg') no-repeat center center;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        margin: 0; /* Elimina márgenes */
        padding: 0; /* Elimina padding */
    }

        .hero-section h1 {
            font-size: 60px;
            font-weight: bold;
            text-shadow: 3px 3px 7px rgba(0, 0, 0, 0.8);
            margin-bottom: 10px;
        }

        .hero-section p {
            font-size: 20px;
            margin-top: 10px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
            line-height: 1.6;
        }

        .hero-section .btn {
            margin-top: 20px;
            padding: 12px 30px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 30px;
            font-size: 18px;
            text-decoration: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

            .hero-section .btn:hover {
                background-color: #0056b3;
                box-shadow: 0 6px 8px rgba(0, 0, 0, 0.3);
                transform: translateY(-2px);
            }

    /* Sección Sobre Nosotros */
    .section {
        padding: 40px 20px;
        text-align: center;
    }

        .section h2 {
            font-size: 40px;
            margin-bottom: 20px;
            color: #333;
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }

        .section p {
            font-size: 18px;
            line-height: 1.8;
            color: #555;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Estilo adicional para el contenedor de testimonios */
        .section.testimonials {
            background: #f9f9f9;
            padding: 60px 20px;
            margin-top: 40px;
        }

            .section.testimonials p {
                font-size: 20px;
                font-style: italic;
                color: #444;
            }

    /* Footer */
    .footer {
        background-color: #333;
        color: white;
        padding: 20px;
        text-align: center;
        margin-top: 40px;
        font-size: 14px;
    }

    /* Servicios */
    .services-title {
        font-size: 36px;
        font-weight: bold;
        margin-bottom: 30px;
        color: #333;
    }

    .card-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        background: white;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 250px;
        padding: 15px;
        text-align: center;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

        .card img {
            width: 100%;
            border-radius: 10px;
        }

        .card h3 {
            margin: 15px 0 10px;
            font-size: 1.4rem;
            color: #333;
        }

        .card p {
            font-size: 1rem;
            color: #555;
        }


    .reviews {
        padding: 60px 20px;
        background-color: #f9f9f9;
        text-align: center;
    }

        .reviews h2 {
            font-size: 36px;
            color: #333;
            margin-bottom: 30px;
        }

    .review-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    .review-card {
        background: white;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 280px;
        padding: 20px;
        text-align: left;
        font-size: 16px;
        line-height: 1.5;
        color: #555;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .review-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

        .review-card p {
            font-style: italic;
            color: #444;
        }


    .stars {
        margin-top: 10px;
        color: #FFD700; /* Color dorado para las estrellas */
    }

    .star {
        font-size: 20px;
        margin-right: 5px;
    }
</style>

<div class="hero-section">
    <div>
