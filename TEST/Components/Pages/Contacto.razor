@page "/Contacto"
@attribute [StreamRendering(true)]
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<style>
    .contact-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 100px;
        padding: 20px;
        text-align: center;
        font-family: 'Bodoni Moda', serif;
    }

    .contact-header {
        font-family: 'Bodoni Moda', serif;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .contact-description {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 30px;
        max-width: 600px;
    }

    .contact-details {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-bottom: 40px;
    }

    .contact-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        width: 300px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background-color: #f9f9f9;
    }

    .contact-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.2);
    }

    .contact-card h4 {
        margin-bottom: 10px;
    }

    .contact-card p {
        margin: 0;
        color: #555;
    }

    .map-container {
        width: 100%;
        max-width: 800px;
        height: 400px;
        border: 2px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    iframe {
        width: 100%;
        height: 100%;
        border: none;
    }
</style>

<div class="contact-container">
    <h1 class="contact-header">Contáctanos</h1>
    <p class="contact-description">
        Estamos aquí para ayudarte. Si tienes alguna consulta o necesitas más información sobre nuestro hotel, no dudes en comunicarte con nosotros.
    </p>

    <div class="contact-details">
        <div class="contact-card">
            <h4>Dirección</h4>
            <p>C. Maestranza, 26, Málaga-Este, 29016 Málaga, España</p>
        </div>
        <div class="contact-card">
            <h4>Teléfono</h4>
            <p>+34 687 42 06 56</p>
        </div>
        <div class="contact-card">
            <h4>Email</h4>
            <p>contacto@hotelbrisaazul.com</p>
        </div>
    </div>

    <h3 class="contact-header">Encuéntranos en el mapa</h3>
    <div class="map-container">
        <!-- Reemplaza "DIRECCION_GOOGLE_MAPS" con la URL real del iframe de Google Maps -->
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d799.535755741751!2d-4.408685530416496!3d36.71912617326467!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd72f7826deda787%3A0x1dcf10d6135f6348!2sCachemir%20M%C3%A1laga!5e0!3m2!1ses!2ses!4v1733480174911!5m2!1ses!2ses" 
        width="600" 
        height="450" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</div>

